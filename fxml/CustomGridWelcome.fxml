<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import net.dragondelve.customdriversutil.fx.css.PromptLabel?>
<?import net.dragondelve.customdriversutil.fx.css.BorderLabel?>
<?import net.dragondelve.customdriversutil.fx.css.DarkerVBox?>

<DarkerVBox fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" spacing="40.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
   </padding>
   <BorderLabel alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="48.0" prefWidth="620.0"
          text="AMS2 Custom Driver Utility version 2.1" textAlignment="CENTER"/>
   <ToolBar>
      <HBox spacing="10.0">
         <PromptLabel prefHeight="25.0" prefWidth="210.0" text="Create a New Custom AI Grid"/>
         <Button fx:id="newEmptyGridButton" mnemonicParsing="false" text="New Empty Grid"/>
         <Button fx:id="newGeneratedGridButton" mnemonicParsing="false" text="New Generated Grid"/>
      </HBox>
   </ToolBar>
   <ToolBar>
      <HBox spacing="10.0">
         <PromptLabel prefHeight="25.0" prefWidth="156.0" text="Load an Existing Grid"/>
         <Button fx:id="loadExistingVanillaGrid" mnemonicParsing="false" text="Existing Vanilla Grid"/>
         <Button fx:id="loadModdedGridButton" mnemonicParsing="false" text="Existing Modded Grid"/>
      </HBox>
   </ToolBar>
   <ToolBar>
      <HBox spacing="10.0">
         <PromptLabel prefHeight="25.0"  text="Don't like seeing this welcome screen? "/>
         <CheckBox fx:id="skipWelcomeScreenCheckBox" mnemonicParsing="false" text="Skip Welcome Screen"/>
      </HBox>
   </ToolBar>
   <DarkerVBox VBox.vgrow="ALWAYS">
      <Separator prefWidth="200.0"/>
   </DarkerVBox>
   <BorderLabel alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="48.0" prefWidth="620.0"
          text="For AMS2 1.4.8.1" textAlignment="CENTER"/>
   <ToolBar>
      <PromptLabel prefHeight="25.0" prefWidth="182.0" text="New AMS 2 Version Out? "/>
      <Button fx:id="manualUpdateButton" mnemonicParsing="false" text="Manual Update"/>
      <PromptLabel prefHeight="25.0" text=" This software is going to be updated within 1 week of the new AMS2 Version to include new tracks, vehicles, bug fixes and new features."/>
   </ToolBar>
</DarkerVBox>
